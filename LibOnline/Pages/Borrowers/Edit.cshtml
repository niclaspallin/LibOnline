@page
@model LibOnline.Pages.Borrowers.EditModel

@{
    ViewData["Title"] = "Ändra";
}

<h3>Redigera @Html.DisplayFor(model => model.Borrower.FullName)</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Borrower.ID" />
            <div class="form-group">
                <label asp-for="Borrower.FirstName" class="control-label"></label>
                <input asp-for="Borrower.FirstName" class="form-control" />
                <span asp-validation-for="Borrower.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Borrower.LastName" class="control-label"></label>
                <input asp-for="Borrower.LastName" class="form-control" />
                <span asp-validation-for="Borrower.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Borrower.Email" class="control-label"></label>
                <input asp-for="Borrower.Email" class="form-control" />
                <span asp-validation-for="Borrower.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Borrower.Phone" class="control-label"></label>
                <input asp-for="Borrower.Phone" class="form-control" />
                <span asp-validation-for="Borrower.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Borrower.StreetAdress" class="control-label"></label>
                <input asp-for="Borrower.StreetAdress" class="form-control" />
                <span asp-validation-for="Borrower.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Borrower.City" class="control-label"></label>
                <input asp-for="Borrower.City" class="form-control" />
                <span asp-validation-for="Borrower.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Borrower.PostalCode" class="control-label"></label>
                <input asp-for="Borrower.PostalCode" class="form-control" />
                <span asp-validation-for="Borrower.PostalCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Listvy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
